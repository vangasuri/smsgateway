<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

    <navigation-rule>
	<from-view-id>login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginBean.validateLoginUser}</from-action>
			<from-outcome>sweets</from-outcome>
			<to-view-id>/sweets.xhtml</to-view-id>
			 <redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.validateLoginUser}</from-action>
			<from-outcome>handb</from-outcome>
			<to-view-id>/hairandbeauty.xhtml</to-view-id>
			 <redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.validateLoginUser}</from-action>
			<from-outcome>papadams</from-outcome>
			<to-view-id>/papadams.xhtml</to-view-id>
			 <redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.validateLoginUser}</from-action>
			<from-outcome>lbnagarpapadams</from-outcome>
			<to-view-id>/lbnagarpapadams.xhtml</to-view-id>
			 <redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.validateLoginUser}</from-action>
			<from-outcome>admin</from-outcome>
			<to-view-id>/admin.xhtml</to-view-id>
			 <redirect/>
		</navigation-case>
    </navigation-rule>	
</faces-config>